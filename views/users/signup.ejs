<% layout("/layouts/boilerplate.ejs") -%>

<body>
    
    <div class="row mt-3 main-content">
        
        <h2>SignUp on Wanderlust</h2>
        <br><br><br>
        <br>
            <div class="col-6 offset-3">
                <form action="/signup" method="post" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <input name="username" class="form-control" id="username" placeholder="Enter your Username">
                      </div>
                      <div class="valid-feedback">Looks Good!</div>

                      <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input name="email" class="form-control" id="email" placeholder="Enter your email">
                      </div>
                      <div class="valid-feedback">Looks Good!</div>
                      <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" id="password" placeholder="Enter Password">

                      </div>
                      <div class="valid-feedback">Looks Good!</div>
                      <button class=" btn btn-success ">Sign up</button>

                </form>
                <br><br><br><br><br><br>
            </div>
    </div>
</body>